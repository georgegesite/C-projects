#include<stdio.h>
#include<string.h>
main()
{
char str[100],str1[100],swap;
int x,y,z,i,place[100],j,k,l,m,n,o;
printf("input words:");
gets(str);
x=strlen(str);
y=1;
place[0]=0;
for(i=0;i<x;i++){
if(str[i]==' '){
place[y]=i+1;
y++;}
}

for(i=0;i<y;i++){
if(i!=(y-1){
j=place[i+1]-2;
k=place[i];
if((str[k]=='a')||(str[k]=='e')||(str[k]=='i')||(str[k]=='o')||(str[k]=='u')){
for(l=k;l<=j;l++){
printf("%s",str[l]);}
printf("ay");
printf(" ");
}
else{
swap=str[k];
str[k]=str[j];
str[j]=swap;
for(l=k;l<=j;l++){
printf("%s",str[l]);}
printf("ay");
printf(" ");
}

}
else if((i==(y-1)){
j=place[x];
k=place[i];
if((str[k]=='a')||(str[k]=='e')||(str[k]=='i')||(str[k]=='o')||(str[k]=='u')){
for(l=k;l<=j;l++){
printf("%s",str[l]);}
printf("ay");
printf(" ");
}
else{
swap=str[k];
str[k]=str[j];
str[j]=swap;
for(l=k;l<=j;l++){
printf("%s",str[l]);}
printf("ay");
printf(" ");
}
}
}

